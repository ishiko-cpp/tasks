ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/test-framework/include/Ishiko/TestFramework/Core.bkl;
import $(ishikopath)/user-tasks/include/Ishiko/UserTasks.bkl;

toolsets = gnu vs2019 vs2017 vs2015 vs2013;

gnu.makefile = ../gnumake/GNUmakefile;
vs2019.solutionfile = ../vc16/IshikoUserTasksTests.sln;
vs2017.solutionfile = ../vc15/IshikoUserTasksTests.sln;
vs2015.solutionfile = ../vc14/IshikoUserTasksTests.sln;
vs2013.solutionfile = ../vc12/IshikoUserTasksTests.sln;

program IshikoUserTasksTests : IshikoUserTasks, IshikoTestFrameworkCore
{
    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoUserTasks IshikoTestFrameworkCore IshikoProcess IshikoErrors boost_filesystem;
    }

    if ($(toolset) != gnu)
    {
        archs = x86 x86_64;
    }

    headers
    {
        ../../src/TaskTests.h
        ../../src/SyncFunctionTaskTests.h
        ../../src/TasksTests.h
        ../../src/TaskRunnerTests.h
    }

    sources
    {
        ../../src/main.cpp
        ../../src/TaskTests.cpp
        ../../src/SyncFunctionTaskTests.cpp
        ../../src/TasksTests.cpp
        ../../src/TaskRunnerTests.cpp
    }
}
